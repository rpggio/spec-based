{
  "name": "spec-to-code",
  "version": "1.0.0",
  "description": "RealWorld Conduit API implementation generated from concept specifications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "generate": "tsx src/lib/generator.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/lib/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "migrate": "npm run db:generate && npm run db:migrate",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "validate": "tsx src/lib/validator.ts"
  },
  "keywords": [
    "realworld",
    "conduit",
    "concept-based",
    "drizzle",
    "adonisjs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/http-server": "^7.7.0",
    "@types/node": "^24.10.0",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "drizzle-kit": "^0.31.6",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0"
  }
}
